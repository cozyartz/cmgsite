{
  "name": "cozyartz-media-group",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "NODE_ENV=production VITE_ENVIRONMENT=production vite build",
    "build:pages": "NODE_ENV=production VITE_ENVIRONMENT=production vite build && cp public/_routes.json dist/ && cp public/_redirects dist/",
    "build:spa": "NODE_ENV=production VITE_ENVIRONMENT=production vite build && cp public/_routes.json dist/ && cp public/_redirects dist/",
    "build:production": "./build-production.sh",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:auth": "vitest run src/components/__tests__/Auth",
    "validate:env": "node validate-environment.mjs",
    "test:comprehensive": "chmod +x comprehensive-test.sh && ./comprehensive-test.sh",
    "pre-deploy": "npm run validate:env && npm run test:run && npm run build",
    "deploy:staging": "npm run pre-deploy && wrangler pages deploy dist --project-name=cmgsite-staging",
    "deploy:production": "npm run pre-deploy && npm run deploy:pages",
    "health-check": "node health-check.mjs",
    "prepare": "husky install",
    "deploy": "VITE_ENVIRONMENT=production VITE_TURNSTILE_SITE_KEY=0x4AAAAAABlo_LdXn1ErLBXD npm run build:pages",
    "deploy:pages": "wrangler pages deploy dist"
  },
  "dependencies": {
    "@cloudflare/ai": "^1.2.2",
    "@cloudflare/workers-types": "^4.20250715.0",
    "@marsidev/react-turnstile": "^1.1.0",
    "@paypal/paypal-js": "^8.2.0",
    "@paypal/react-paypal-js": "^8.8.3",
    "@supabase/supabase-js": "^2.52.0",
    "dotenv": "^17.2.0",
    "lucide-react": "^0.344.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-helmet-async": "^2.0.4",
    "react-router-dom": "^7.6.3",
    "resend": "^4.6.0",
    "wrangler": "^4.24.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "husky": "^9.0.11",
    "jsdom": "^24.0.0",
    "lint-staged": "^15.2.2",
    "postcss": "^8.4.35",
    "prettier": "^3.2.5",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^7.0.1",
    "vitest": "^1.3.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
